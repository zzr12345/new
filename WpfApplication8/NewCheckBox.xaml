<UserControl x:Class="WpfApplication8.NewCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication8"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="110">
    <Grid x:Name="grid" Background="PapayaWhip">
        <Grid.RowDefinitions>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="11*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textBlock" TextAlignment="Center" HorizontalAlignment="Center" Height="19" Margin="0" TextWrapping="Wrap" VerticalAlignment="Center" Width="60" FontSize="16"/>
        <CheckBox x:Name="checkBox" Content="选择" HorizontalAlignment="Center" Height="20" Margin="0" VerticalAlignment="Center" Grid.Row="1" FontSize="14"/>
        <Label x:Name="textBlock1" Content="（空闲）" HorizontalAlignment="Left" Margin="1,-20,0,0" VerticalAlignment="Top" FontSize="10"/>
    </Grid>
</UserControl>
