        <Button x:Name="button2" Content="发送" HorizontalAlignment="Left" Height="38" Margin="366,259,0,0" VerticalAlignment="Top" Width="95" Click="button2_Click"/>
        <Button x:Name="button3" Content="下一页" HorizontalAlignment="Left" Height="29" Margin="463,0,0,0" VerticalAlignment="Top" Width="54" Click="button3_Click"/>

    </Grid>
</Window>
